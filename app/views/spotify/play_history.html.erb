<h2>Play History</h2>
<%= button_to 'Import Recently Played', spotify_import_recently_played_path, method: :get %>
<table>
  <tr>
    <th>#</th>
    <th>Track</th>
    <th>Artists</th>
    <th>Played At</th>
  </tr>
  <% @play_history.each_with_index do |t, index| %>
    <tr>
      <td><%= index + 1 %></td>
      <td><%= t.name %></td>
      <td><%= t.artists.slice(0,25) %></td>
      <td><%= t.played_at.in_time_zone("Pacific Time (US & Canada)").to_datetime.strftime('%a, %-m/%e/%y %I:%M:%S %P') %></td>
    </tr>
  <% end %>
</table>